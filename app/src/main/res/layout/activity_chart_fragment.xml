<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cpb_white"
                android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_large"
        android:paddingRight="@dimen/margin_large"
        android:paddingTop="@dimen/margin_large"
        android:paddingBottom="@dimen/margin_larger"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <View
                style="@style/Chart.TagDivider"
                android:layout_toRightOf="@+id/chart_lable"
                android:layout_alignBottom="@+id/chart_lable"/>

            <TextView
                style="@style/Chart.Save"
                android:id="@+id/chart_save" />

            <TextView
                style="@style/Chart.Lable"
                android:id="@+id/chart_lable"
                android:text="库存饼状图"
                android:layout_below="@+id/chart_save"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/chartLinear"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large">

            <TextView
                style="@style/Chart.Lable"
                android:id="@+id/chart_percentage_lable"
                android:text="数据柱形图"/>

            <View
                style="@style/Chart.TagDivider"
                android:layout_toRightOf="@+id/chart_percentage_lable"
                android:layout_alignBottom="@+id/chart_percentage_lable"/>

            <TextView
                style="@style/Chart.Save"
                android:id="@+id/chart_percentage_save" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/percentageLinear"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large">

            <TextView
                style="@style/Chart.Lable"
                android:id="@+id/chart_fuel_lable"
                android:text="生产折线图"/>

            <View
                style="@style/Chart.TagDivider"
                android:layout_toRightOf="@+id/chart_fuel_lable"
                android:layout_alignBottom="@+id/chart_fuel_lable"/>

            <TextView
                style="@style/Chart.Save"
                android:id="@+id/chart_fuel_save" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/fuelLinear"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"/>



    </LinearLayout>


</ScrollView>
